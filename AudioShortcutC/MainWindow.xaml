        <Image HorizontalAlignment="Left" Height="57" Margin="278,148,0,0" VerticalAlignment="Top" Width="57"/>
        <Image HorizontalAlignment="Left" Height="57" Margin="278,148,0,0" VerticalAlignment="Top" Width="57"/>
        <Image HorizontalAlignment="Left" Height="57" Margin="278,148,0,0" VerticalAlignment="Top" Width="57"/>
        <Image x:Name="ImageSpeakers" HorizontalAlignment="Left" Height="57" Margin="278,221,0,0" VerticalAlignment="Top" Width="57" MouseLeftButtonDown="ImageSpeakers_MouseLeftButtonDown"/>
        <Image x:Name="ImageHeadset" HorizontalAlignment="Left" Height="57" Margin="278,148,0,0" VerticalAlignment="Top" Width="57" MouseLeftButtonDown="ImageHeadset_MouseLeftButtonDown"/>
        <RadioButton x:Name="RadioButtonHeadset" Content="" HorizontalAlignment="Left" Margin="235,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,-0.373"/>
        <RadioButton x:Name="RadioButtonHeadset_Copy" Content="" HorizontalAlignment="Left" Margin="235,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,-0.373"/>
        <RadioButton x:Name="RadioButtonHeadset_Copy1" Content="" HorizontalAlignment="Left" Margin="235,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,-0.373"/>
        <RadioButton x:Name="RadioButtonHeadset_Copy2" Content="" HorizontalAlignment="Left" Margin="235,167,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,-0.373"/>
        <RadioButton x:Name="RadioButtonSpeaker" Content="" HorizontalAlignment="Left" Margin="235,240,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,-0.373"/>
        <TextBlock x:Name="LabelStatus" HorizontalAlignment="Left" Margin="10,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="391"/>

    </Grid>
</Window>
